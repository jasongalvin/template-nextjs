{
  "name": "@karmaniverous/next-template",
  "version": "0.0.8",
  "description": "Next.js ES6 template with support for Redux Toolkit, Serify, Lodash, Semantic UI, and Mocha + Chai.",
  "main": "index.js",
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "build": "next build",
    "dev": "next dev",
    "release": "dotenv -c development -- release-it",
    "start": "next start",
    "test": "mocha"
  },
  "mocha": {
    "require": [
      "@babel/register",
      "chai-as-promised",
      "chai-match-pattern"
    ],
    "spec": "./{,!(node_modules)/**}/*.test.*js*"
  },
  "author": "@karmaniverous",
  "license": "UNLICENSED",
  "dependencies": {
    "@karmaniverous/merge-delimited-lists": "^0.0.1",
    "@karmaniverous/serify-deserify": "^1.2.8",
    "@reduxjs/toolkit": "^1.8.3",
    "lodash": "^4.17.21",
    "next": "^12.2.2",
    "next-redux-wrapper": "^7.0.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-scroll": "^1.8.7",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-syntax-import-assertions": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@next/bundle-analyzer": "^12.3.1",
    "@next/eslint-plugin-next": "^12.2.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-extension": "^0.1.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-match-pattern": "^1.3.0",
    "commander": "^9.3.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "envfile": "^6.17.0",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "release-it": "^15.1.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "lodash",
      [
        "module-extension",
        {
          "mjs": ""
        }
      ]
    ]
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "proseWrap": "always",
    "tabWidth": 2
  },
  "release-it": {
    "github": {
      "release": true,
      "update": true
    },
    "npm": {
      "publish": false
    }
  }
}
